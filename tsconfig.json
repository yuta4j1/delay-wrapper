{
    "compilerOptions": {
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "sourceMap": true,
      "jsx": "react",
      "lib": [
        "dom",
        "es2017"
      ],
      "declarationDir": "dist",
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "target": "esnext",
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src"
    ]
  }
  